{{#each this}}
  <article class='country'>
    <h2 class='country__name'>{{name}}</h2>
    <div class='country__container'>
      <div class='country__info'>
        <P class='country__capital'>Capital: {{capital}}</P>
        <P class='country__population'>Population: {{population}}</P>
        <p class='country__languages'>Languages: </p>
        <ul class='country__lang-list'>
          {{#each languages}}
            <li class='country__lang-item'>{{name}}</li>
          {{/each}}
        </ul>
      </div>
      <img class='country__flag' width='300' src='{{flag}}' alt='{{name}}' />
    </div>
  </article>
{{/each}}